.quote_body {
  font-family: Lora, Georgia, 'Times New Roman', Times, serif;
  a p {
    color: #333;
  }
}

.quote blockquote {
  margin-right: 20px;
}

#quote {
  .quote_body p{
    margin: 40px 0;
    font-size: 36px;
    line-height: 57px;
  }

  .chinese p{
    font-family: Arial, Helvetica, sans-serif;;
  }

  .quote_photo {
    img {
      margin-bottom: 20px;
      width: 100%;
    }
  }

  .meta_info {
    font-size: 18px;
    text-align: right;
  }

  .uploader {
    text-align: right;
    margin-top: 10px;
    color: #A2A2A2;
  }
  .context {
    text-align: right;
    font-size: 15px;
  }
}

#quotes {
  margin: 0;
  -webkit-padding-start: 0;

  li {
    list-style-type: none;
    margin-bottom: 50px;
    border-bottom: 1px solid #ccc;
  }

  .quote_body {
    margin: 10px 0;

    p {
      font-size: 24px;
      line-height: 35px;
      text-shadow: 0px 1px 1px rgb(197, 195, 195);
    }

    a:hover {
      text-decoration: none;
    }
  }

  .chinese p{
    font-family: Arial, Helvetica, sans-serif;;
  }

  .meta_info {
    margin-top: 25px;
    font-size: 14px;
    text-align: right;
  }
}

.quote_form {
  .add_more_photos {
    margin: 10px 0 0 10px;
  }
}

li.quote.well {
  padding: 0;

  .uploader {
    padding: 10px 20px;
    border-bottom: 1px solid #bababa;


    .user_avatar {
      margin-right: 10px;
    }

    .owner,
    .user_link {
      vertical-align: bottom;
    }

    .user_link {
      font-size: 1.1em;
    }
  }

  .contents {
    padding: 20px;
    background: url(<%= asset_path 'bg.jpeg' %>);
  }

  .actions {
    background: #e4e4e4;
    border-top: 1px solid #bababa;
    padding: 10px 20px;
  }
}
