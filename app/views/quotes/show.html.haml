#quote
  %blockquote
    .quote_body= @quote.content
    .meta_info
      = @quote.name
      %cite= "-ã€Š#{@quote.source}ã€‹" if @quote.source?
  .uploader
    Uploaded by #{link_to @quote.user.name, @quote.user}, #{time_ago_in_words(@quote.created_at)} ago.
