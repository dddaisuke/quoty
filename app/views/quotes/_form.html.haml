= nested_form_for @quote, html: { class: 'form-horizontal quote_form', multipart: true, autocomplete: 'off' } do |f|
  .form-group
    = f.label :content, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_area :content, class: 'form-control', rows: 5, placeholder: 'Quotes & Words...', autofocus: true
  .form-group
    = f.label :author_name, 'Author', class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_field :author_name, placeholder: 'by whom', data: { wiki_field: 'author_wiki_id' }, class: 'form-control'
  .form-group
    = f.label :source, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_field :source, placeholder: 'Book, Movie or any media', data: { wiki_field: 'source_wiki_id' }, class: 'form-control'
  = f.hidden_field :author_id
  = f.hidden_field :source_wiki_id
  .form-group
    = f.label :context, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_area :context, placeholder: 'Under what context or circumstances...', class: 'form-control', rows: 2
  - if @quote.persisted?
    .form-group
      = f.label :language, class: 'col-sm-2 control-label'
      .col-sm-8
        = text_field :language, as: :select, collection: %w(english japanese chinese), prompt: 'Select language'
  .form-group
    = f.label :photos, class: 'col-sm-2 control-label'
    .col-sm-8
      .row
        = f.fields_for :photos
      = f.link_to_add 'Add more ...', :photos, class: 'btn btn-sm add_more_photos'
  .form-group
    .col-sm-offset-2.col-sm-8
      = f.submit class: 'btn btn-primary'
      = link_to 'Cancel', quotes_path, class: 'btn btn-default'
